<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/start_date_str"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="开始日期"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/start_date" />

    <TextView
        android:id="@+id/start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="2018-8-1"
        app:layout_constraintBaseline_toBaselineOf="@id/start_date_str"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintLeft_toRightOf="@id/start_date_str"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/end_date_str"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="结束日期"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/end_date"
        app:layout_constraintTop_toBottomOf="@id/start_date_str" />

    <TextView
        android:id="@+id/end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="2018-8-2"
        app:layout_constraintBaseline_toBaselineOf="@id/end_date_str"
        app:layout_constraintHorizontal_weight="0.7"

        app:layout_constraintLeft_toRightOf="@id/end_date_str"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/interval_date_str"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="循环时间"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/interval_date"
        app:layout_constraintTop_toBottomOf="@id/end_date_str" />

    <TextView
        android:id="@+id/interval_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:hint="30天"
        app:layout_constraintBaseline_toBaselineOf="@id/interval_date_str"
        app:layout_constraintHorizontal_weight="0.7"

        app:layout_constraintLeft_toRightOf="@id/interval_date_str"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>